import java.util.*;
class Solution {
    public double minimumAverage(int[] nums) {
        int n=nums.length/2,c=0,i=0,j=nums.length-1;
        double min=Double.MAX_VALUE;
        Arrays.sort(nums);
        while(c<n){
            double d=((double)nums[i]+nums[j])/2;
            if(d<min){
                min=d;
            }
            i++;
            j--;
            c++;
        }
        return min;
    }
}
