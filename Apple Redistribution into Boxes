import java.util.*;
class Solution {
    public int minimumBoxes(int[] apple, int[] capacity) {
        int c=0,a=0,sum=0;
        for(Integer aa:apple){
            a+=aa;
        }
        Arrays.sort(capacity);
        for(int i=capacity.length-1;i>-1;i--){
            sum+=capacity[i];
            c++;
            if(a<=sum){
                return c;
            }
        }
        return 0;
    }
}
