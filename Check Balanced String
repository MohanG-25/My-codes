import java.util.*;
class Solution {
    public boolean isBalanced(String num) {
        int oddSum=0;
        int evenSum=0;
        for(int i=0;i<num.length();i++){
            if(i%2==0){
                evenSum+=Character.getNumericValue(num.charAt(i));
            }
            else{
                oddSum+=Character.getNumericValue(num.charAt(i));
            }
        }
        if(evenSum==oddSum){
            return true;
        }
        return false;
    }
}
