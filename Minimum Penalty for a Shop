import java.util.*;
class Solution {
    public int bestClosingTime(String customers) {
        int minPenalty =Integer.MAX_VALUE;
        int bestHour=0,penalty=0;
        for(int i=0;i<customers.length();i++){
            if(customers.charAt(i)=='Y'){
                penalty++;
            }
        }
        minPenalty=penalty;
        for(int i=0;i<customers.length();i++){
            if(customers.charAt(i)=='Y'){
                penalty--;
            }
            else{
                penalty++;
            }
            if(minPenalty>penalty){
                minPenalty=penalty;
                bestHour=i+1;
            }
        }
     
        return bestHour;
    }
}
